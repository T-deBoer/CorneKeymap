    keymap {
        compatible = "zmk,keymap";

        L_Base {
            display-name = "Colemakish";
            bindings = <
&kp TAB    &kp Q  &kp W  &kp F     &kp P     &kp B        &kp J      &kp L  &kp U      &kp Y     &kp SEMI  &kp LBKT
&kp LCTRL  &kp A  &kp R  &kp S     &kp T     &kp G        &kp M      &kp N  &kp E      &kp I     &kp O     &kp APOS
&kp LSHFT  &kp Z  &kp X  &kp C     &kp D     &kp V        &kp K      &kp H  &kp RCTRL  &kp RALT  &tog 2    &tog 1
                         &kp LGUI  &kp LALT  &kp SPACE    &kp SPACE  &mo 2  &mo 3
            >;

            label = "BSE";
        };

        L_Qwerty {
            bindings = <
&trans  &kp Q  &kp W  &kp E   &kp R   &kp T     &kp Y   &kp U   &kp I   &kp O   &kp P     &kp LBKT
&trans  &kp A  &kp S  &kp D   &kp F   &kp G     &kp H   &kp J   &kp K   &kp L   &kp SEMI  &kp APOSTROPHE
&trans  &kp Z  &kp X  &kp C   &kp V   &kp B     &kp N   &kp M   &trans  &trans  &trans    &trans
                      &trans  &trans  &trans    &trans  &trans  &trans
            >;

            label = "QWE";
        };

        L_Numbers {
            display-name = "NumFunc";
            bindings = <
&trans  &kp LEFT_BRACKET  &kp N7  &kp N8  &kp N9  &kp RIGHT_BRACKET    &kp EQUAL       &kp PLUS   &kp MINUS  &kp CARET  &none            &none
&trans  &kp LPAR          &kp N4  &kp N5  &kp N6  &kp RPAR             &kp LEFT_BRACE  &kp ASTRK  &kp SLASH  &kp PRCNT  &kp RIGHT_BRACE  &none
&trans  &kp N0            &kp N1  &kp N2  &kp N3  &none                &kp BACKSLASH   &kp HASH   &trans     &trans     &trans           &trans
                                  &trans  &trans  &trans               &trans          &trans     &trans
            >;

            label = "NUM";
        };

        L_Function {
            display-name = "NumFunc";
            bindings = <
&trans  &kp F12  &kp F7  &kp F8  &kp F9  &none     &none   &none   &none   &none   &none   &none
&trans  &kp F11  &kp F4  &kp F5  &kp F6  &none     &none   &none   &none   &none   &none   &none
&trans  &kp F10  &kp F1  &kp F2  &kp F3  &none     &none   &none   &trans  &trans  &trans  &trans
